@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>ALL Departement</h1>

<br/>

<br/>

<a asp_action="Create" asp-Controller="Department"class="btn btn-primary">Create Department</a>


<br/>

<br/>

@if (Model.Count() > 0){
   
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Details </th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code </td>
                    <td>@item.Name </td>
                    <td>@item.CreateAt </td>
                    <td>
                        <a asp-aciton="Details" class="btn btn-warning">Details</a>
                    </td>
                    <td>
                        <a asp-aciton="Edit" class="btn btn-success">Update</a>
                    </td>
                    <td>
                        <a asp-aciton="Delete" class="btn btn-danger">Delete</a>
                    </td>
                </tr>    
            }
        </tbody>
    </table>

}
else
{
    
    <div class="mt-4 alert alert-info">
       <h4>
            There are no Department :(
       </h4>   
    </div>
}
